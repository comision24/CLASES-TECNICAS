        <%- include("../partials/banner", { bannerImages }) %>

          <div class="mt-4">

            <div class="glider-contain">
              <div class="glider">

                <% products.forEach(p => { %>
                 
                  <!-- PRODUCTO 1 -->
                  <div>
                    <div class="card mx-2 h-100 d-flex flex-column justify-content-between">
                      <div class="slider-img-container">
