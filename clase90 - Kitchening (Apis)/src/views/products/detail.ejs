<!DOCTYPE html>
<html lang="es">

<%- include("../partials/head") %>

  <body class="home-body">
    <div class="contain-dots" id="contain-dots">
      <div class="dot-spin"></div>
    </div>

    <%- include("../partials/header") %>

      <main class="detail d-flex gap-2 justify-content-center">
        
        <div class="contenedor-producto d-flex flex-column gap-2">
          <div class="imagen-principal"><img class="img-principal" src="/images/products/<%= product.imagePrincipal %>" alt="img-principal"></div>
          <div class="d-flex gap-2">

            <% product.imagesSecondary.forEach((img) => { %>
            <div class="subImagen-1"><img class="img-secondary" src="/images/products/<%= img.file %>" alt="image-secondary"></div>
           <% }) %>
          </div>
        </div>

        <div class="container-info">
          <h4><%= product.title %></h4>
          <p>$ <%= product.price %></p>
          <p><%= product.discount %></p>
          <p><%= product.description %></p>
        </div>

      </main>

      <%- include("../partials/footer") %>

        <%- include("../partials/scripts") %>
  </body>

</html>