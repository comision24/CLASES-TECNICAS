<!DOCTYPE html>
<html lang="es">
<!-- Include Head -->
<%- include('../partials/head', {title: 'Formulario de creación'}) %>
<body>
	<!-- Header -->
	<%- include('../partials/headerNavbar') %>
	<!-- /Header -->

	<div class="container products-wrapper">
		<div class="row">
			<div class="col-12">
				<h2 class="products-title">Formulario de creación de productos</h2>
			</div>
		</div>
		<div class="col-12">
			<form action="/admin/crear-producto" method="post" enctype="multipart/form-data">
				<div class="row product-detail">
					<div class="col-12 col-md-6">
						<label for="name" class="form-label">Nombre del producto:</label>
						<input type="text" id="name" name="name" value="<%= locals.old?.name %>" placeholder="Ej: Zapatillas Reebok" class="form-input <%= locals.errors?.name ? "input-invalid" :                                "input-valid" %>">
						<p class="msg-error"><%= locals.errors?.name?.msg %></p>
					</div>
					<div class="col-12 col-md-6">
						<label for="price" class="form-label">Precio del producto:</label>
						<input type="text" id="price" name="price" value="<%= locals.old?.price %>" placeholder="Ej: 5678" class="form-input <%= locals.errors?.price ? "input-invalid" : "input-valid" %>">
						<p class="msg-error"><%= locals.errors?.price?.msg %></p>
					</div>
					<div class="col-12 col-md-6">
						<label for="discount" class="form-label">Descuento:</label>
						<input type="text" id="discount" name="discount" value="<%= locals.old?.discount %>" placeholder="Ej: 15" class="form-input <%= locals.errors?.discount ? "input-invalid" : "input-valid" %>">
						<p class="msg-error"><%= locals.errors?.discount?.msg %></p>
					</div>
					<div class="col-12 col-md-6">
						<label for="category" class="form-label">Categoría:</label>
						<select name="category" id="category" class="form-input <%= locals.errors?.category ? "input-invalid" : "input-valid" %>">
							<option <%= locals.old?.category === "" ? "selected" : null %> value="" selected hidden>Elegí</option>
							<option <%= locals.old?.category === "in-sale" ? "selected" : null %> value="in-sale">En oferta</option>
							<option <%= locals.old?.category === "visited" ? "selected" : null %> value="visited">Últimos agregados</option>
						</select>
						<p class="msg-error"><%= locals.errors?.category?.msg %></p>
					</div>
					<div class="col-12">
						<label for="description" class="form-label">Descripción:</label>
						<textarea name="description" id="description" class="form-input <%= locals.errors?.description ? "input-invalid" : "input-valid" %>"><%= locals.old?.description %></textarea>
						<p class="msg-error"><%= locals.errors?.description?.msg %></p>
					</div>
					

					<div class="col-12">
						<input type="file" class="form-input" name="img" id="customFileLang" lang="es">
						<!-- <label class="form-label" for="customFileLang">Seleccionar Archivo</label> -->
						<p class="msg-error"><%= locals.errors?.img?.msg %></p>
					</div>

					<div class="col-6">
						<button type="submit" class="buy-now-button">Guardar producto</button>
					</div>
				</div>
			</form>
		</div>

	</div>
	<!-- /todos los productos -->

	<!-- footer -->
	<%- include('../partials/footer') %>
	<!-- /footer -->
</body>	
</html>