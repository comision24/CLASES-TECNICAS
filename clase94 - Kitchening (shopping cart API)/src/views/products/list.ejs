<!DOCTYPE html>
<html lang="es">

<%- include("../partials/head") %>

  <body class="home-body">
    <div class="contain-dots" id="contain-dots">
      <div class="dot-spin"></div>
    </div>

    <%- include("../partials/header") %>

      <main class="list-products row justify-content-center gap-4">
        
        <nav aria-label="Page navigation example" class="col-12 mt-5">
          <ul class="pagination justify-content-center">
            <li class="page-item">
              <a class="page-link link-danger" href="#" aria-label="Previous">
                <span aria-hidden="true">&laquo;</span>
              </a>
            </li>
            <li class="page-item"><a class="page-link link-danger" href="#">1</a></li>
            <li class="page-item"><a class="page-link link-danger" href="#">2</a></li>
            <li class="page-item"><a class="page-link link-danger" href="#">3</a></li>
            <li class="page-item">
              <a class="page-link link-danger" href="#" aria-label="Next">
                <span aria-hidden="true">&raquo;</span>
              </a>
            </li>
          </ul>
        </nav>

        <% products.forEach(p => { %>
         
          <div class="card p-1 shadow col-2 d-flex flex-column justify-content-between">
            <div class="img-container">
              <img src="/images/products/<%= p.imagePrincipal %>" class="card-img-top img-item" alt="img-principal">
            </div>
            <div class="card-body d-flex flex-column justify-content-between">
              <h5 class="card-title"><%= p.title %></h5>
            </div>
            <div class="d-flex flex-column">
              <p class="card-text text-success">$<%= p.price %></p>
              <a href="/productos/detalle/<%= p.id %>" class="btn btn-dark btn-dark-custom">Ver m√°s</a>
            </div>
          </div>

        <% }) %>
        
      </main>

      <%- include("../partials/footer") %>

        <%- include("../partials/scripts") %>
  </body>

</html>