<h1 class="text-center text-danger my-4">Listado de usuarios</h1>

<a href="#" class="btn btn-dark btn-dark-custom mb-4">Crear Usuario</a>
<table class="table table-list-products">
    <thead>
        <tr>
            <th scope="col">ID</th>
            <th scope="col">Avatar</th>
            <th scope="col">Nombre</th>
            <th scope="col">Apellido</th>
            <th scope="col">Email</th>
            <th scope="col">Rol</th>
            <th scope="col">Acciones</th>
        </tr>
    </thead>
    <tbody>
        <% users.forEach(u => { %>
        
        <tr>
            <th scope="row"><%= u.id %></th>
            <td><img class="img-product" src="/images/users/<%= u.avatar %>" alt=""></td>
            
            <td><%= u.name %></td>
            <td><%= u.surname %></td>
            <td><%= u.email %></td>
            <td><%= u.role.name %></td>

            <td>
                <div class="btn-group" role="group">
                    <a href="#" class="btn btn-warning d-inline-block">Editar</a>
                    <a href="#" class="btn btn-danger btn-danger-custom d-inline-block">Eliminar</a>
                </div>
            </td>
        </tr>

        <% }) %>
    </tbody>
</table>